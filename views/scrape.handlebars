<div class="container">
  <div class="row" id="count">
    <button type="submit" class="btn btn-danger mb-3" id="clear"><i class="fa fa-trash-o" aria-hidden="true"></i> clear articles</button>
  </div>
  <div class="row">
  <div class="card-columns scraped-articles">
    {{#each articles}} 
      {{#unless this.saved}}
        <div class="card mb-1" style="width: 18rem;">
          <img class="card-img-top" src={{this.img_url}} alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{this.headline}}</h5>
            <p class="card-text">{{this.summary}}</p>
            <a href={{this.link}} class="btn btn-link">link</a>
            <button type="submit" data-id={{this._id}} class="btn btn-success save" id="save">save</button>
          </div>
        </div>
      {{/unless}}
    {{/each}}
  </div>
  </div>
</div>

